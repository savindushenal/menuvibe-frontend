    created_at: new Date().toISOString(),
    updated_at: new Date().toISOString(),
  },
];

const mockItems: MenuItem[] = [
  {
    id: 1,
    menu_id: 1,
    name: 'Caesar Salad',
    description: 'Fresh romaine lettuce with parmesan and croutons',
    price: 12.99,
    category_id: 1,
    is_available: true,
    is_featured: false,
